@model BookingAdminVM

@{
    ViewData["Title"] = "Save";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="form-container fade-in-up">
    <h2 class="form-title">🎟️ Add Booking</h2>
    <form asp-action="Save" method="post" class="styled-form">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <input type="hidden" asp-for="Booking.Id" />
        <!-- 🎬 Showtime Selector -->
        <div class="form-group floating-label">
            <select asp-for="Booking.ShowTimeId" class="form-select" asp-items="Model.ShowTimes">
                <option value="">-- Choose a Showtime --</option>
            </select>
            <span asp-validation-for="Booking.ShowTimeId" class="text-danger"></span>
        </div>
        <!-- 🎫 Number of Seats -->
        <div class="form-group floating-label">
            <input asp-for="Booking.NumberOfSeats" class="form-control" placeholder=" " />
            <label asp-for="Booking.NumberOfSeats">Number of Seats</label>
            <span asp-validation-for="Booking.NumberOfSeats" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-save">💾 Save Booking</button>
            <a asp-action="Index" class="btn-back">← Back</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

<style>
    .form-container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        background: white;
        border-radius: 20px;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
        animation: fadeInUp 0.8s ease forwards;
        opacity: 0;
        transform: translateY(20px);
    }

    @@keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .form-title {
        text-align: center;
        color: #b30000;
        margin-bottom: 1.5rem;
        font-weight: 700;
    }

    .floating-label {
        position: relative;
        margin-bottom: 1.5rem;
    }

        .floating-label input,
        .floating-label select {
            width: 100%;
            padding: 1rem 0.75rem 0.25rem;
            border: 1px solid #ccc;
            border-radius: 10px;
            background: transparent;
            outline: none;
            appearance: none;
        }

        .floating-label label {
            position: absolute;
            top: 1rem;
            left: 0.75rem;
            background: white;
            padding: 0 5px;
            color: #aaa;
            transition: 0.3s;
            pointer-events: none;
        }

        .floating-label input:focus + label,
        .floating-label input:not(:placeholder-shown) + label,
        .floating-label select:focus + label,
        .floating-label select:not([value=""]) + label {
            top: -0.6rem;
            left: 0.6rem;
            font-size: 0.75rem;
            color: #b30000;
        }

    .form-actions {
        margin-top: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .btn-save {
        background-color: #b30000;
        color: white;
        border: none;
        padding: 0.6rem 1.5rem;
        border-radius: 12px;
        font-weight: bold;
        transition: background 0.3s ease;
    }

        .btn-save:hover {
            background-color: #800000;
        }

    .btn-back {
        color: #555;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }

        .btn-back:hover {
            color: #b30000;
        }
</style>
